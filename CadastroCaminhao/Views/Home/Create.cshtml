@model CadastroCaminhao.Models.Caminhao

@{
    Layout = "_Layout";
    var title = "CREATE Caminhao";
    ViewData["Title"] = title;
}

<style>
    .input-validation-error {
        border-color: red;
    }
</style>

<h2>@title</h2>

@if (ViewBag.IsSuccess)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Caminhao salvo com sucesso!</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (!ViewBag.IsSuccess)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Erro ao salvar caminhao.</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form class="m-1 p-1" method="post">
    <div class="form-group">
        <label asp-for="Modelo"></label>
        <input asp-for="Modelo" class="form-control" />
        <span asp-validation-for="Modelo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AnoModelo"></label>
        <input asp-for="AnoModelo" type="text" class="form-control" />
        <span asp-validation-for="AnoModelo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AnoFabricacao"></label>
        <input asp-for="AnoFabricacao" type="text" class="form-control" />
        <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
